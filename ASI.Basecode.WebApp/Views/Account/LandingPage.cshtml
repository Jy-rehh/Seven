 
    @section styles {
    <link rel="stylesheet" href="~/css/landingpage.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
}
@{
    ViewBag.LoginView = true;
    ViewData["Title"] = "Landing Page";
}
    <div>
        @Html.AntiForgeryToken()
    </div>
<body>
        <header>
            <nav class="container">
                <div class="logosec hover-pointer" style="display: flex; justify-content: center; align-items: center;">
                    <img src="~/img/expenSave-logo.png"
                         style="width: 200px; display: block;" alt="logo">
                </div>
                <ul class="pt-lg-3">
                    <li><a href="#features">Features</a></li>
                    <li><a href="#how-it-works">How It Works</a></li>
                    <li><a href="#about">About</a></li>
                </ul>
            </nav>
        </header>

        <main>
            <section class="hero">
                <div class="container">
                    <h1 style="margin-right: 10px;">
                        Manage Your Expenses
                    </h1>
                <h1 style="margin-right: 10px;">
                    with
                    <img src="~/img/expenSave-white-logo.png"
                         style="height: 90px; margin-top: 5px; display: inline-block; vertical-align: middle;"
                         alt="ExpenSave Logo">
                </h1>
                <p>Track, analyze, and optimize your spending with our powerful expense management system.</p>
                <a asp-controller="Account" asp-action="Register" class="btn mr-2">Sign Up</a>
                <a asp-controller="Account" asp-action="Login" class="btn btn-outline ml-2">Sign In</a>
            </div>
        </section>

            <section id="features" class="features">
                <div class="container">
                    <h2>Features</h2>
                    <div class="feature-grid">
                        <div class="feature-item">
                            <i class="fas fa-user-plus feature-icon"></i>
                            <h3>User Authentication</h3>
                            <p>Secure registration, login, and logout functionality</p>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-money-bill-wave feature-icon"></i>
                            <h3>Expense Management</h3>
                            <p>Add, edit, delete, and view your expenses with ease</p>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-tags feature-icon"></i>
                            <h3>Category Management</h3>
                            <p>Organize your expenses with customizable categories</p>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-chart-pie feature-icon"></i>
                            <h3>Reporting & Analytics</h3>
                            <p>Generate detailed reports and visualize expense trends</p>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-chart-line feature-icon"></i>
                            <h3>Expense Trends</h3>
                            <p>Analyze your spending patterns with interactive charts</p>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-cog feature-icon"></i>
                            <h3>Settings & Preferences</h3>
                            <p>Customize your experience with user-specific settings</p>
                        </div>
                    </div>
                </div>
            </section>

            <section id="how-it-works" class="how-it-works">
                <div class="container">
                    <h2>How It Works</h2>
                    <div class="steps">
                        <div class="step">
                            <span class="step-number">1</span>
                            <h3>Sign Up</h3>
                            <p>Create your account securely</p>
                        </div>
                        <div class="step">
                            <span class="step-number">2</span>
                            <h3>Add Expenses</h3>
                            <p>Log your daily expenses easily</p>
                        </div>
                        <div class="step">
                            <span class="step-number">3</span>
                            <h3>Categorize</h3>
                            <p>Organize expenses into categories</p>
                        </div>
                        <div class="step">
                            <span class="step-number">4</span>
                            <h3>Analyze</h3>
                            <p>Generate reports and view trends</p>
                        </div>
                    </div>
                </div>
            </section>

            <section id="about" class="about">
                <div class="container">
                    <h2 style="margin-right: 10px;">
                        About
                        <img src="~/img/expenSave-logo.png"
                             style="height: 55px; display: inline-block; vertical-align: middle;"
                             alt="ExpenSave Logo">
                    </h2>
                    <p>ExpenSave is a smart and user-friendly expense tracking system designed to help you take control of your finances. Our mission is to empower individuals with the tools they need to manage their money effectively and achieve their financial goals.</p>
                    <p>With ExpenSave, you can effortlessly track your income and expenses, categorize spending, and gain insights into your financial habits. Whether you're managing a tight budget or optimizing your spending, ExpenSave is here to simplify the process.</p>
                    <p>We prioritize security and usability, offering a customizable experience and robust user authentication to ensure your data stays protected. ExpenSave is continually evolving to keep up with the latest trends and feedback from our users.</p>
                    <p>Thank you for choosing ExpenSave as your trusted partner in financial management!</p>
                </div>
            </section>
        </main>

        <footer>
            <div class="container">
                <p>&copy; 2024 ExpenSave by Group Neves. All rights reserved.</p>
            </div>
        </footer>
        </body>
    
    @section scripts {
        <script>
            const togglePassword = document.querySelector("#togglePassword");
            const password = document.querySelector("#password");
            const eyeIcon = document.querySelector("#eyeIcon");

            togglePassword.addEventListener("click", function () {
                // Toggle the password field type
                const type = password.getAttribute("type") === "password" ? "text" : "password";
                password.setAttribute("type", type);

                // Toggle the eye icon
                eyeIcon.classList.toggle("fa-eye");
                eyeIcon.classList.toggle("fa-eye-slash");
            });
            // Check for error message and display Toastr notification
            var errorMessage = '@TempData["ErrorMessage"]';
            if (errorMessage) {
                toastr.error(errorMessage);
            }
        
        </script>
    }