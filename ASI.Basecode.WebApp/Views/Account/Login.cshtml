    <div class="container-fluid d-flex align-items-center justify-content-center">
        
        <div class="row w-100 mx-auto">
            <!-- Left Graphic Section -->
            <div class="col-lg-6 col-md-6 d-none d-md-block p-0">
                <div class="left-section h-100 d-flex justify-content-center align-items-center">
                    <div class="text-center text-white">
                        <h1 class="display-4">Track your expenses.</h1>
                        <p class="mt-4">Make your life easier with our expense tracker.</p>
                        <img src="~/images/calculator.png" alt="Expense tracker" class="img-fluid"/>
                    </div>
                </div>
            </div>

            <!-- Right Form Section -->
            <div class="col-lg-6 col-md-6 d-flex align-items-center">
                
                <div class="w-100 p-4 p-md-5">
                    
                    <div class="login-form">
                        
                        <h2 class="mb-2">Sign in</h2>
                        <p class="mb-3">Welcome back to expense tracker!</p>
                        <hr class="text-muted mb-4">

                        <form method="post" action="/Account/Login" id="loginForm">
                            <div class="form-group mb-3">
                                <input type="text" id="email" class="form-control rounded-pill p-3" placeholder="Email" asp-for="UserId"/>
                                <span asp-validation-for="UserId" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-5 position-relative">
                                <input type="password" id="password" class="form-control rounded-pill p-3" placeholder="Password" asp-for="Password"/>
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <i class="position-absolute eye-icon" id="togglePassword"></i>
                                <a href="#!" class="text-muted small forgot-password ">Forgot Password?</a>
                            </div>
                            <div class="form-group mb-2">
                                <button class="btn btn-block text-white rounded-pill gradient-bg p-2" type="submit">Sign in</button>
                            </div>
                            <div class="d-flex justify-content-center pt-0">
                                <p class="mb-0 text-muted small">Don't have an account? </p>
                                <a asp-controller="Account" asp-action="Register" class="text-black-50 small sign-up font-weight-bold "> Sign Up</a>
                            </div>
                        </form>


                    </div>
                </div>
            </div>
        </div>
    </div>

    @section scripts {
        <script>
            // Check for error message and display Toastr notification
            var errorMessage = '@TempData["ErrorMessage"]';
            if (errorMessage) {
                toastr.error(errorMessage);
            }
        </script>
