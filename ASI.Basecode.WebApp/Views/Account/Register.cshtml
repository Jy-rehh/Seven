<div class="container-fluid d-flex align-items-center justify-content-center">

    <div class="row w-100 mx-auto">
        <!-- Left Graphic Section -->
        <div class="col-lg-6 d-flex p-0">
            <img style="height:600px"src="~/img/Track-Expenses.png" />
        </div>

        <!-- Right Form Section -->
        <div class="col-lg-6 col-md-6 d-flex align-items-center">
            <div class="w-100 p-4 p-md-5">
                <div class="login-form">
                    <h2 class="mb-2">Sign up</h2>
                    <p class="mb-3">Welcome to expense tracker!</p>
                    <hr class="text-muted mb-4">

                    <form method="post" action="/Account/Login" id="loginForm">
                        <div class="form-group mb-3">
                            <p class="mb-2">Email</p>
                            <input type="text" id="email" class="form-control rounded-pill p-3" asp-for="UserId"/>
                            <span asp-validation-for="UserId" class="text-danger small"></span>
                        </div>
                        <div class="form-group mb-3 position-relative">
                            <!-- Password Input -->
                            <p class="mb-2">Password</p>
                            <input type="password" id="password" class="form-control rounded-pill p-3" asp-for="Password" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                            <i class="position-absolute eye-icon" id="togglePassword"></i>
                        </div>

                        <div class="form-group mb-4 position-relative">
                            <!-- Confirm Password Input -->
                            <p class="mb-2">Confirm Password</p>
                            <input type="password" id="confirmPassword" class="form-control rounded-pill p-3 " asp-for="ConfirmPassword" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                            <i class="position-absolute eye-icon" id="toggleConfirmPassword"></i>
                        </div>
                        
                        <div class="form-group mb-2">
                            <button class="btn btn-block text-white rounded-pill gradient-bg p-2" type="submit">Sign up</button>
                        </div>
                        <div class="d-flex justify-content-center pt-0">
                            <p class="mb-0 text-muted small">Already have an account? </p>
                            <a asp-controller="Account" asp-action="Login" class="text-black-50 small sign-up font-weight-bold "> Sign in</a>
                        </div>
                    </form>


                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script>
        // Check for error message and display Toastr notification
        var errorMessage = '@TempData["ErrorMessage"]';
        if (errorMessage) {
            toastr.error(errorMessage);
        }
    </script>
}