@model ASI.Basecode.Services.ServiceModels.CategoryViewModel
@{
    ViewData["Title"] = "Create";
}

<h4>CREATE CATEGORY</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="createCategoryForm" method="post" asp-action="Create">
            <div class="form-group">
                <label for="Name">Name</label>
                <input type="text" class="form-control" id="Name" name="Name" required>
                <span class="text-danger" data-valmsg-for="Name"></span>
            </div>
            <button type="submit" class="btn btn-secondary">Save Category</button>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}