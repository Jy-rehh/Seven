@section styles {
    <link rel="stylesheet" href="~/css/dashboard.css" />
}
@{
    ViewData["Title"] = "Home Page";
}

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<!-- Main Content Section -->
<div class="main-content" style="margin-top: 95px;">
    <h1>
        My Expenses
    </h1>
    <div class="container">
        <div class="expenses">
            <canvas id="expensesChart"></canvas>
        </div>
        <div class="expense">
            <h2>Expenses</h2>
        </div>
    </div>
</div>

<div class="main-content">
    <h1>
        Category
    </h1>
    <div class="container">
        <div class="categories">
            <canvas id="categoryChart"></canvas>
        </div>
        <div class="category">
            <h2>Category</h2>
        </div>
    </div>
</div>



<script>
    var ctxExpenses = document.getElementById('expensesChart').getContext('2d');

    var expensesChart = new Chart(ctxExpenses, {
        type: 'bar',
        data: {
            labels: ['January', 'February', 'March', 'April', 'May'],
            datasets: [
                {
                    label: 'Rent',
                    data: [3, 5, 2, 7, 4],
                    backgroundColor: 'rgba(75, 192, 192, 0.6)',
                    barThickness: 20,
                },
                {
                    label: 'Utilities',
                    data: [4, 6, 3, 8, 5],
                    backgroundColor: 'rgba(153, 102, 255, 0.6)',
                    barThickness: 20,
                },
                {
                    label: 'Groceries',
                    data: [2, 4, 5, 6, 2],
                    backgroundColor: 'rgba(54, 162, 235, 0.6)',
                    barThickness: 20,
                }
            ]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    display: true,
                    labels: {
                        color: '#666',
                        font: {
                            size: 12
                        }
                    }
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        color: '#666',
                        stepSize: 2
                    },
                    grid: {
                        color: 'rgba(200, 200, 200, 0.2)'
                    }
                },
                x: {
                    ticks: {
                        color: '#666'
                    },
                    grid: {
                        display: false
                    }
                }
            }
        }
    });

    var ctxCategoryTrends = document.getElementById('categoryChart').getContext('2d');

    var categoryTrendsChart = new Chart(ctxCategoryTrends, {
        type: 'line',
        data: {
            labels: ['0', '1', '2', '3', '4'],
            datasets: [
                {
                    label: 'Dataset 1',
                    data: [4, 2, 6, 3, 0],
                    borderColor: 'rgba(153, 102, 255, 1)',
                    backgroundColor: 'rgba(153, 102, 255, 0.1)',
                    fill: false,
                    tension: 0.4,
                    borderWidth: 2,
                    pointRadius: 4,
                    pointBackgroundColor: 'rgba(153, 102, 255, 1)',
                    pointBorderColor: '#fff'
                },
                {
                    label: 'Dataset 2',
                    data: [3, 4, 0, 1, 2],
                    borderColor: 'rgba(255, 99, 132, 1)',
                    backgroundColor: 'rgba(255, 99, 132, 0.1)',
                    fill: false,
                    tension: 0.4,
                    borderWidth: 2,
                    pointRadius: 4,
                    pointBackgroundColor: 'rgba(255, 99, 132, 1)',
                    pointBorderColor: '#fff'
                },
                {
                    label: 'Dataset 3',
                    data: [1, 5, 3, 7, 4],
                    borderColor: 'rgba(54, 162, 235, 1)',
                    backgroundColor: 'rgba(54, 162, 235, 0.1)',
                    fill: false,
                    tension: 0.4,
                    borderWidth: 2,
                    pointRadius: 4,
                    pointBackgroundColor: 'rgba(54, 162, 235, 1)',
                    pointBorderColor: '#fff'
                }
            ]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    display: false
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        color: '#666',
                        stepSize: 2
                    },
                    grid: {
                        color: 'rgba(200, 200, 200, 0.3)'
                    }
                },
                x: {
                    ticks: {
                        color: '#666'
                    },
                    grid: {
                        display: false
                    }
                }
            }
        }
    });
</script>
