@section styles {
    <link rel="stylesheet" href="~/css/dashboard.css" />
}
@{
    ViewData["Title"] = "Home Page";
}

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<!-- Main Content Section -->
<div class="header" style="margin-top: 80px; margin-left: 90px;">
    <h1 style="color: #5A706C; font-weight:700; font-size:xx-large; color: #1A554F;">
        My Expenses
    </h1>
</div>
<div class="main-content" style="margin-top: 50px; background-color: #1A554F;">
    <div class="container">
        <div class="expenses">
            <canvas id="expensesChart"></canvas>
        </div>
        <div class="expense">
            <h2>Expenses</h2>
        </div>
    </div>
</div>


<script>
    var ctxExpenses = document.getElementById('expensesChart').getContext('2d');

    var expensesChart = new Chart(ctxExpenses, {
        type: 'bar',
        data: {
            labels: ['January', 'February', 'March', 'April', 'May'],
            datasets: [
                {
                    label: 'Rent',
                    data: [3, 5, 2, 7, 4],
                    backgroundColor: 'rgba(75, 192, 192, 0.6)',
                    barThickness: 20,
                },
                {
                    label: 'Utilities',
                    data: [4, 6, 3, 8, 5],
                    backgroundColor: 'rgba(153, 102, 255, 0.6)',
                    barThickness: 20,
                },
                {
                    label: 'Groceries',
                    data: [2, 4, 5, 6, 2],
                    backgroundColor: 'rgba(54, 162, 235, 0.6)',
                    barThickness: 20,
                }
            ]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    display: true,
                    labels: {
                        color: '#666',
                        font: {
                            size: 12
                        }
                    }
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        color: '#666',
                        stepSize: 2
                    },
                    grid: {
                        color: 'rgba(200, 200, 200, 0.2)'
                    }
                },
                x: {
                    ticks: {
                        color: '#666'
                    },
                    grid: {
                        display: false
                    }
                }
            }
        }
    });
</script>
