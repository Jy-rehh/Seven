@section styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
}
@model ASI.Basecode.Services.ServiceModels.ExpenseViewModel
@{
ViewData["Title"] = "ChangePassword";
}

<div class="main-content-change-pass", style="height:715px">
    <div class="settings-container">
        <div class="settings-content">
            <!-- Personal Details Section -->
            <div class="personal-details">
                <h2>Personal Details</h2>

                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" id="name" class="form-input">
                </div>

                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" id="username" class="form-input">
                </div>

                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" class="form-input">
                </div>

                <div class="preference-section">
                    <h2>Preference</h2>
                    <div class="form-group">
                        <label for="currency">Default Currency</label>
                        <select id="currency" class="form-select">
                            <option value="PHP" selected>Philippine Peso (₱)</option>
                            <option value="USD" selected>US Dollar ($)</option>
                            <option value="EUR" selected>Euro (€)</option>
                            <option value="JPY" selected>Japanese Yen (¥)</option>
                            <option value="SGD" selected>Singapore Dollar (S$)</option>
                        </select>
                    </div>
                </div>

                <button class="save-btn">Save Changes</button>
            </div>

            <!-- Change Password Section -->
            <div class="password-section">
                <h2>Change Password</h2>

                <div class="form-group mb-2 position-relative mb-4">
                    <label for="old-password">Old Password</label>
                    <div class="d-flex align-items-center">
                        <input type="password" id="oldPassword" class="form-input rounded-pill"/>
                        <i class="position-absolute" id="toggleOldPassword" style="right: 20px; cursor: pointer;">
                            <i class="fas fa-eye-slash" id="eyeIconOldPassword"></i>
                        </i>
                    </div>
                </div>

                <div class="form-group mb-2 position-relative mb-4">
                    <label for="new-password">New Password</label>
                    <div class="d-flex align-items-center">
                        <input type="password" id="newPassword" class="form-input rounded-pill"/>
                        <i class="position-absolute" id="toggleNewPassword" style="right: 20px; cursor: pointer;">
                            <i class="fas fa-eye-slash" id="eyeIconNewPassword"></i>
                        </i>
                    </div>
                </div>

                <div class="form-group mb-2 position-relative">
                    <label for="confirm-password">Confirm Password</label>
                    <div class="d-flex align-items-center">
                        <input type="password" id="confirmPassword" class="form-input rounded-pill"/>
                        <i class="position-absolute" id="toggleConfirmPassword" style="right: 20px; cursor: pointer;">
                            <i class="fas fa-eye-slash" id="eyeIconConfirmPassword"></i>
                        </i>
                    </div>
                    <a href="Account/ForgotPassword" class="forgot-password text-end" style="display: block; margin-right: 10px; text-align: right;">Forgot Password?</a>

                </div>

                <div class="password-actions">
                    <button class="change-password-btn">Change Password</button>
                </div>
                </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        // Toggle visibility for Old Password
        const toggleOldPassword = document.querySelector("#toggleOldPassword");
        const oldPassword = document.querySelector("#oldPassword");
        const eyeIconOldPassword = document.querySelector("#eyeIconOldPassword");

        toggleOldPassword.addEventListener("click", function () {
            const type = oldPassword.getAttribute("type") === "password" ? "text" : "password";
            oldPassword.setAttribute("type", type);

            // Update the icon
            if (type === "text") {
                eyeIconOldPassword.classList.remove("fa-eye-slash");
                eyeIconOldPassword.classList.add("fa-eye");
            } else {
                eyeIconOldPassword.classList.remove("fa-eye");
                eyeIconOldPassword.classList.add("fa-eye-slash");
            }
});

        // Toggle visibility for New Password
        const toggleNewPassword = document.querySelector("#toggleNewPassword");
        const newPassword = document.querySelector("#newPassword");
        const eyeIconNewPassword = document.querySelector("#eyeIconNewPassword");

        toggleNewPassword.addEventListener("click", function () {
            const type = newPassword.getAttribute("type") === "password" ? "text" : "password";
            newPassword.setAttribute("type", type);

            // Update the icon
            if (type === "text") {
                eyeIconNewPassword.classList.remove("fa-eye-slash");
                eyeIconNewPassword.classList.add("fa-eye");
            } else {
                eyeIconNewPassword.classList.remove("fa-eye");
                eyeIconNewPassword.classList.add("fa-eye-slash");
            }
});

        // Toggle visibility for Confirm Password
        const toggleConfirmPassword = document.querySelector("#toggleConfirmPassword");
        const confirmPassword = document.querySelector("#confirmPassword");
        const eyeIconConfirmPassword = document.querySelector("#eyeIconConfirmPassword");

        toggleConfirmPassword.addEventListener("click", function () {
            const type = confirmPassword.getAttribute("type") === "password" ? "text" : "password";
            confirmPassword.setAttribute("type", type);

            // Update the icon
            if (type === "text") {
                eyeIconConfirmPassword.classList.remove("fa-eye-slash");
                eyeIconConfirmPassword.classList.add("fa-eye");
            } else {
                eyeIconConfirmPassword.classList.remove("fa-eye");
                eyeIconConfirmPassword.classList.add("fa-eye-slash");
            }
});




    </script>
@{
await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
