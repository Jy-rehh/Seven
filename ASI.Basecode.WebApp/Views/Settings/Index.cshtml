@section styles {
    <link rel="stylesheet" href="~/css/dashboard.css" />
    <link rel="stylesheet" href="~/css/expenses.css" />
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
}

@model ASI.Basecode.Services.ServiceModels.SettingsDataModel

@{
    ViewData["Title"] = "Settings";
}

<div class="main-content">
    <div class="row w-100 mx-auto">
        <!-- Sidebar remains as is -->
        <div class="col-lg-6 d-flex p-0">
            <div class="settings-form">
                <img style="height:50px; padding-left: 70px; border-radius: 50%;" src="~/img/profile-logo.png" />

                <!-- User Information -->
                <label for="name">Name</label>
                <input type="text" id="name" value="@Model.UserViewModel.FirstOrDefault()?.Name" class="form-control" />

                <label for="username">Username</label>
                <input type="text" id="username" value="@Model.UserViewModel.FirstOrDefault()?.UserId" class="form-control" />

                <label for="email">Email</label>
                <input type="email" id="email" value="@Model.UserViewModel.FirstOrDefault()?.Email" class="form-control" />

                <!-- Language Preference Dropdown -->
                <label for="language">Language Preference:</label>
                <select id="language" name="Language" class="form-control">
                    <option value="" selected disabled>Select Language</option>
                    <option value="en">English</option>
                    <option value="es">Spanish</option>
                    <option value="fr">French</option>
                    <option value="de">German</option>
                    <option value="it">Italian</option>
                    <!-- Add more languages as needed -->
                </select>

                <button class="btn btn-primary mt-3">Save Changes</button>
            </div>
        </div>

        <div class="col-lg-6 col-md-6 d-flex align-items-center">
            <div class="col-lg-12">
                <h2>Change Password</h2>
                <form asp-action="UpdatePassword" method="post">
                    <label for="old-password">Old Password</label>
                    <input type="password" id="old-password" name="OldPassword" class="form-control" />

                    <label for="new-password">New Password</label>
                    <input type="password" id="new-password" name="NewPassword" class="form-control" />

                    <label for="confirm-password">Confirm Password</label>
                    <input type="password" id="confirm-password" name="ConfirmPassword" class="form-control" />

                    <a href="#" class="forgot-password">Forgot Password?</a>
                    <button type="submit" class="btn btn-primary mt-3">Change Password</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @*  @await Html.RenderPartialAsync("_ValidationScriptsPartial"); *@
}
